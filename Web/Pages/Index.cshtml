@page
@{
  /* Go fishing for some cache. */
  var initialPayload = cache.Get("initialPayload");
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
  <link rel="stylesheet" href="./bundle.css" asp-append-version="true" />
  <link rel="icon" type="image/png" href="~/favicon.png" asp-append-version="true" />
  <title>Poetracker</title>
  <meta name="robots" content="noindex,nofollow" />
  <meta property="og:title" content="Poetracker" />
  <meta property="og:type" content="website" />
  <meta property="og:description" content="Path of Exile rank tracker" />
  <meta property="og:image" content="@Request.Scheme://@Request.Host/favicon.png" />
  <link rel="manifest" href="~/manifest.webmanifest" />
</head>
<body class="bg-light">
  @if (env.IsDevelopment()) {
    <mini-profiler />
  }
  <nav class="navbar navbar-dark bg-dark">
    <div class="container">
      <span class="navbar-brand">
        <img src="~/favicon.png" width="30" height="30" alt="Poetracker" />
        Poetracker
      </span>
      <a class="navbar-text text-right" href="https://github.com/dhedegaard/poetracker" target="_blank">
        Github
      </a>
    </div>
  </nav>
  <div class="container">
    <div id="app" />
    @if (initialPayload != null) {
      <script type="text/javascript">window.InitialPayload=@Json.Serialize(initialPayload);</script>
    }
    <script async type="text/javascript" src="./bundle.js" asp-append-version="true"></script>
  </div>
</body>
</html>
